<%= f.error_messages %>

<p><%= f.label :name %><br />
<%= f.text_field :name %></p>

<p><%= f.label :email %><br />
<%= f.text_field :email %></p>

<p><%= f.label :password %><br />
<%= f.password_field :password %></p>

<p><%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %></p>

<% if is_admin? %>
<p><%= f.label :role %>: <%= f.collection_select :role,ROLES , :to_s, :humanize, {:include_blank => false , :multiple => true} %></p>
<% end %>

<p><%= f.submit "Submit" %></p>

