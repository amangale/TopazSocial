<% content_for :breadcrumb do %>
  <li><%= link_to "Employees Administration", employees_path %> <span class="divider">/</span></li>
  <li class="active">Add Employee</li>
<% end %>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <% if is_admin? %>
    <p>
      <%= f.label :role %>:
      <input id="user_role_" name="user[role][]" type="hidden" value="" />
      <ul>
        <% ROLES.each do |role| -%>
          <li>
            <label for="user_role_<%= role %>">
              <input id="user_role_<%= role %>" name="user[role][]" type="checkbox" value="<%= role %>" />
              <%= role.titleize %>
            </label>
          </li>
        <% end -%>
      </ul>
    </p>
  <% end %>

  <p><%= f.submit "Add Employee" %></p>
<% end %>
