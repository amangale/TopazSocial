<% content_for :breadcrumb do %>
 <li class="active">Customers Administration</li>
<% end %>

<div class="panel panel-info">
  <div class="panel-heading">
    <strong>Customers Administration</strong>
  </div>  
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>E-mail</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| -%>
          <tr>
            <td><%= user.name || " " %></td>
            <td><%= link_to user.email , edit_employee_path(user) %></td>
            <td>
              <% if user.access_locked? -%>
                <%= link_to "Enable" , enable_user_path(user) %>
              <% else -%>
                <%= link_to "Disable" , disable_user_path(user) %>
              <% end -%>
            </td>  
          </tr>
        <% end -%>
      </tbody>  
    </table>
</div>    



