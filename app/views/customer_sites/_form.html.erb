<%= simple_form_for([@customer_account,@customer_site]) do |s| %>
  <%= s.error_notification %>
    <%= s.hidden_field :customer_account_id  %>
    <%= s.input :name  %>
    <%= s.input :description, :as => :text, :input_html => {:size => "60x8"}  %>
    <%= s.input :address_line1 %>
    <%= s.input :address_line2 %>
    <%= s.input :city %>
    <%= s.input :state %>
    <%= s.input :zipcode %>
    <%= s.input :country %>
    <%= s.button :submit %>
  
<% end %>
