<h2>Accounts</h2>
<% for account in @accounts %>
  
  <div class="sapp_feature">
    <h4><%= link_to account.name , edit_account_path(account) %></h4>
    <h4><%= account.ac_type %></h4>
    <p><%= account.description %></p>      
  </div>
  
  <p>    
    <% if account.sites.size > 0 -%>
      <p>
        Sites:
        <br />
          <% account.sites.each do |t| -%>
            <%= link_to t.name , account_site_path(account,t) %>
          <% end -%>
        <% end -%>
      </p>      
    <%= link_to "Add a Site" , new_account_site_path(account) %>
    <% if account.is_enabled? -%>
      <%= link_to "Disable" , disable_account_path(account) %>
    <% else -%>
      <%= link_to "Enable" , enable_account_path(account) %>
    <% end -%>
  </p>
  
<% end %>

<br class="clear"/>

<p><%= link_to "New Account", new_account_path %></p>




