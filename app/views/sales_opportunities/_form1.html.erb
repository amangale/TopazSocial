<% content_for :head do -%>
    <%= javascript_include_tag "jquery-1.6.4.min.js" , "validate"%>
    <%= javascript_include_tag "bootstrap-datepicker.js" %>
    <%= stylesheet_link_tag 'datepicker' %>
 <% end -%>
<%= form_for(@sales_opportunity) do |f| %>
