    <%= f.label :name  %><br> 
    <%= f.text_field :name, :required => true %>
  </div>
  
  <div class="field">
    <%= f.label :source %><br> 
    <%= f.text_field :source %>
  </div> 
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>  
  
  <div class="field">
    <%= f.label :type %><br>
    <%= f.text_field :type %>
  </div>  
        
