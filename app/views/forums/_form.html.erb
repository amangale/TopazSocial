<%= simple_form_for(@forum) do |f| %>
  <%= f.error_notification %>
 
  <% if @forum.forum_category_id and !@forum.forum_category_id.blank? -%>
    <%= f.hidden_field :forum_category_id %>
  <% else -%>
    
      
      <%= f.input :forum_category_id , :collection => ForumCategory.all.where(:enabled => true).collect {|fc| [fc.name, fc.id]}, :include_blank => false %>
    
  <% end -%>
      <%= f.input :name  %>
      <%= f.input :description, :as => :text, :input_html => {:size => "60x8"} %>
      <%= f.button :submit %>
<% end %>



