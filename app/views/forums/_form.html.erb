      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if @forum.forum_category_id and !@forum.forum_category_id.blank? -%>
    <%= f.hidden_field :forum_category_id %>
  <% else -%>
    <div class="field"> 
      <%= f.label :category  %><br />
      <%= f.select :forum_category_id ,options_from_collection_for_select(ForumCategory.active, "id" , "name"), :include_blank => false %>
    </div>
  <% end -%>
  
  <div class="field">
    <%= f.label :name  %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description  %><br />
    <%= f.text_area :description %>
  </div>  

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>

