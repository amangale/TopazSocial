<%= form_for([@account,@site]) do |s| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this app from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= s.hidden_field :account_id  %>
  </div>
  
  <div class="field">
      <%= s.label :temp  %><br />
      <%= s.text_field :temp %>
    </div>

  <div class="field">
      <%= s.label :name  %><br />
      <%= s.text_field :name %>
    </div>
    
    <div class="field">
      <%= s.label :description  %><br />
      <%= s.text_area :description %>
    </div>
    
    <div class="field">
      <%= s.label :address_line1  %><br />
      <%= s.text_field :address_line1 %>
    </div>
    
    <div class="field">
      <%= s.label :address_line2  %><br />
      <%= s.text_field :address_line2 %>
    </div>
    
    <div class="field">
      <%= s.label :city  %><br />
      <%= s.text_field :city %>
    </div>
    
    <div class="field">
      <%= s.label :state  %><br />
      <%= s.text_field :state %>
    </div>
    
    <div class="field">
      <%= s.label :zipcode  %><br />
      <%= s.text_field :zipcode %>
    </div>
    
    <div class="field">
      <%= s.label :country  %><br />
      <%= s.text_field :country %>
    </div>    

  <div class="actions">
    <%= s.submit %>
  </div>
<% end %>

<script type="text/javascript" >
  $("#site_temp").autocomplete("/accounts.js");
</script>

