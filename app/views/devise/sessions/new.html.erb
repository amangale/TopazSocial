<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "login_form"} ) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.text_field :email , :class=> "required email inputDefault", :title => "Enter login Email" %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password , :class => "required inputDefault", :title => "Password" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>

<script type="text/javascript">
  $(document).ready(function(){
    $("#login_form").validate();
  });
  $("#user_email").inputDefault();
  $("#user_password").inputDefault();

</script>

