<% content_for :breadcrumb do %>
  <li><%= link_to "KM Categories", km_page_categories_path %>
  <li class="active">KM page </li>
<% end %>

<button class="btn btn-default">
  <%= link_to "Add a Page" , new_km_page_category_km_page_path(@km_page_category) %>
</button>
<br />
<br />
<div class="panel panel-info">
  <div class="panel-heading">
    <strong>KM Pages</strong>
  </div>  
    <table class="table table-hover" >
    <thead>
      <th>Title</th>
      <th>Content</th>
      <th><th>
    </thead>
    <tbody>
      <% @km_pages.each do |km_page| -%>
      <tr>
        <td><%= link_to km_page.title, km_page_category_km_page_path(@km_page_category, km_page) %></td>
        <td> <%= km_page.content %></td>
        <td><%= link_to 'Edit', edit_km_page_category_km_page_path(@km_page_category, km_page) %></td>
        <td><%= link_to 'Destroy', km_page_category_km_page_path(@km_page_category, km_page), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
      <% end -%>
    </tbody>
  </table>

